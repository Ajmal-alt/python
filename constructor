#CONSTRUCTOR

class Student:
    def say_hello(self,a):
        print("Hi, I'm a student!")
s1 = Student()
s1.say_hello(1)



#EXAMPLE 1

class Students:
    def __init__(self,fname,age):
        self.name = fname
        self.age = age
    def display(self):
        print(f"Name :{self.name}, Age :{self.age}")
s2=Students("Ajmal" , 20)
s2.display()



#EXAMPLE 2

class Employee:
    def __init__(self,name,aadhar):
        self.name = name 
        self.aadhar = aadhar
    def enter_office(self):
        print(f"{self.name} enters using Aadhar {self.aadhar}.")
    def open_bank_account(self):
        print(f"Bank Account openned for {self.name} with Another Aadhar {self.aadhar}. ")
emp1=Employee("Ajmal","1234-5678-9012")
emp1.enter_office()
emp1.open_bank_account()
