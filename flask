#FLASK 

from flask import Flask
app = Flask(__name__)
@app.route('/')
def home():
    return "Hello, World! This is my first Flask app."
if __name__=='__main__':
    app.run(debug=True)



#FLASK WEB APP 
#CREATE A HTML FILE INSIDE THE FOLDER WITH NAME TEMPLATE FOLDER 

from flask import Flask,  render_template
app = Flask(__name__)
@app.route('/')
def home():
    return render_template("index.html")
if __name__ == '__main__':
    app.run(debug=True)
