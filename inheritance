        print("white")
s=son()
s.factory()
s.house()

        

#INHERITANCE EXAMPLE 5

class v1:
    def house (self):
        print("i am version 1")
class v2(v1):
    def app2(self):
        print("i am version 2")
v=v2()
v.app2()
v.house()
