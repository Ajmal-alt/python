#INHERITANCE EXAMPLE 1

class dad:
    def house(self):
        print("I am from dad class")
class test:
    def factory(self):
        print("I am from factory class")
d=dad()
d.house()
t=test()
t.factory()



#INHERITANCE EXAMPLE 2

class dad:
    def house(self):
        print("I am from dad class")
class son(dad):
    def factory(sellf):
        print("I am from factory class")
s=son()
s.house() 



#INHERITANCE EXAMPLE 3

class app1:
    def v1(self):
        print("orders")
class app1_1(app1):
    def v2(self):
        print("refund")
a=app1_1()
a.v1()
a.v2()



#INHERITANCE EXAMPLE 4

class dad: 
    def house (self):
        print("red")
class son(dad):
    def factory (self):
        print("white")
    def house(self):
        print("yellow")
a=son()
a.house()
a.factory()



#INHERITANCE FROM ANOTHER FILE THIS CODE SHOW ERROR 

